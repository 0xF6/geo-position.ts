{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "downlevelIteration": true,
        "declaration": true
    },
    "typeRoots": [
        "./../node_modules/@types"
    ],
    "include": [
        "**/*"
    ],
    "exclude": [
        "./../node_modules",
        "**/*.spec.ts",
        "*.js"
    ]
}